<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewProductoAlert"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            app:srcCompat="@drawable/huaweiy7" />

        <TextView
            android:id="@+id/textViewCantidadStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Stock"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nombre"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewPrecioProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Precio"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextCantidadCarrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Ingresa Cantidad"
            android:inputType="number" />

        <Button
            android:id="@+id/buttonAgrregarProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:text="Agregar" />

        <Button
            android:id="@+id/buttonCancelarProducto"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#BB1D2A"
            android:text="Cancelar" />
    </LinearLayout>
</RelativeLayout>